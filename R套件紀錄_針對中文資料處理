#install.packages().當然這是安裝指令
#正文

library("tncn")
#https://cran.r-project.org/web/packages/tmcn/tmcn.pdf
#簡/繁體中文之編碼處理、轉換字體套件、分詞功能、停用字、文本矩陣.等中文資料處理

library("XML")
#

#擷取PDF檔案，將文字檔導入R
library("pdftools")
#將\n語法剃除
pdf_text("檔案路徑") %>% strsplit(split = "\n")

#將文字向量中的特定字元去除
strsplit("檔案","欲去除特定字元")

#stringr
library("stringr")
str_replace_all( "資料來源","[^[:alnum:]]","")

#各式替代各式資料雜質
